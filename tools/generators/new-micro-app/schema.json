{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "new-micro-app",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Application name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "port": {
      "type": "number",
      "description": "Port which app will run on",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    }
  },
  "required": ["name", "port"]
}
